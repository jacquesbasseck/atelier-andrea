{% extends "layout/base.html.twig" %}

{% block title %}
    Emploi du temps
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/dhtmlxscheduler.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins/dhtmlx/message/codebase/message.js') }}" type="text/javascript"></script>

    <link rel="stylesheet" href="{{ asset('js/plugins/dhtmlx/scheduler/dhtmlxscheduler.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('js/plugins/dhtmlx/message/codebase/themes/message_default.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('css/dhtmlx/style.css') }}" type="text/css">

    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_editors.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_html_templates.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_minical.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_limit.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_tooltip.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_collision.js') }}"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/locale/locale_fr.js') }}" charset="utf-8"></script>
    <script src="{{ asset('js/plugins/dhtmlx/scheduler/ext/dhtmlxscheduler_readonly.js') }}" charset="utf-8"></script>

    <style type="text/css" media="screen">
        html, body {
            margin: 0px;
            padding: 0px;
            height: 100%;
            overflow: hidden;
        }
    </style>
    <script type="text/javascript" charset="utf-8">
        {% if soinsJson|length > 0 %}
            window.GLOBAL_SOINS = {{ soinsJson|raw }};
        {% else %}
            window.GLOBAL_SOINS = [];
        {% endif %}

        {% if userJson|length > 0 %}
            window.GLOBAL_USER = {{ userJson|raw }};
        {% else %}
            window.GLOBAL_USER = [];
        {% endif %}

        {% if rendezvousJson|length > 0 %}
            window.GLOBAL_RENDEZVOUS = {{ rendezvousJson|raw }};
        {% else %}
            window.GLOBAL_RENDEZVOUS = [];
        {% endif %}
    </script>
{% endblock %}

{% block header %}
    {% include "navigation/header.html.twig" %}
{% endblock %}

{% block body %}
    <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;'>
        <div class="dhx_cal_navline">
            <div class="dhx_cal_prev_button">&nbsp;</div>
            <div class="dhx_cal_next_button">&nbsp;</div>
            <div class="dhx_cal_today_button"></div>
            <div class="dhx_cal_date"></div>
            <div class="dhx_cal_tab" name="day_tab" style="right:204px;"></div>
            <div class="dhx_cal_tab" name="week_tab" style="right:140px;"></div>
            <div class="dhx_cal_tab" name="month_tab" style="right:76px;"></div>
        </div>
        <div class="dhx_cal_header"></div>
        <div class="dhx_cal_data"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/dhtmlx/initialization.js') }}" charset="utf-8" type="text/javascript"></script>
{% endblock %}
